<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/NormalText"
        android:id="@+id/pm2_5text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="PM2_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        style="@style/NormalText"
        android:id="@+id/pm2_5Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/pm2_5text"
        app:layout_constraintTop_toTopOf="@+id/pm2_5text" />

    <TextView
        style="@style/NormalText"
        android:id="@+id/pm10_0text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="PM10_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pm2_5text" />
    <TextView
        style="@style/NormalText"
        android:id="@+id/pm10_0Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/pm10_0text"
        app:layout_constraintTop_toTopOf="@+id/pm10_0text" />

    <TextView
        style="@style/NormalText"
        android:id="@+id/monitorText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Monitor ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pm10_0text" />
    <EditText
        style="@style/NormalText"
        android:id="@+id/monitorEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:autofillHints=""
        android:hint="Input"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/monitorText"
        app:layout_constraintStart_toEndOf="@+id/monitorText"
        app:layout_constraintTop_toTopOf="@+id/monitorText"
        app:layout_constraintVertical_bias="1.0" />
    <Button
        style="@style/NormalText"
        android:id="@+id/setMonitorID"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:text="@string/set_data"
        app:layout_constraintBottom_toBottomOf="@+id/monitorEdit"
        app:layout_constraintStart_toEndOf="@+id/monitorEdit"
        app:layout_constraintTop_toTopOf="@+id/monitorText" />
    <ImageView
        android:id="@+id/monitorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/setMonitorID"
        app:layout_constraintStart_toEndOf="@+id/setMonitorID"
        app:layout_constraintTop_toTopOf="@+id/setMonitorID"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>